{
  "name": "wandersonwhcr/plates-romans",
  "description": "Plates Extension to Convert Arabic to Roman Numerals and Vice Versa",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=7.4",
    "league/plates": "3.4.*"
  },
  "require-dev": {
    "php-parallel-lint/php-parallel-lint": "1.2.*",
    "phpmd/phpmd": "2.9.*",
    "phpunit/phpunit": "9.5.*",
    "sebastian/phpcpd": "6.0.*",
    "squizlabs/php_codesniffer": "3.5.*",
    "slevomat/coding-standard": "6.4.*"
  },
  "autoload": {
    "psr-4": {
      "Plates\\Romans\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PlatesTest\\Romans\\": "test"
    }
  },
  "scripts": {
    "optimize": [
      "composer install --no-dev --optimize-autoloader --classmap-authorizative"
    ],
    "test": [
      "parallel-lint src",
      "phpunit",
      "phpcpd src",
      "phpmd src text phpmd.xml",
      "phpcs"
    ]
  }
}
